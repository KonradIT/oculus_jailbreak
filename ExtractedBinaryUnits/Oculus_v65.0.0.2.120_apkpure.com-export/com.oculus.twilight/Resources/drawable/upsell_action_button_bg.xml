<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:variablePadding="false">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/iorg_main_20"/>
            <stroke android:width="1.0dp" android:color="@color/iorg_btn_light_primary_stroke_pressed"/>
            <corners android:radius="2.0dp"/>
            <padding android:left="@dimen/iorg_button_padding_left_small" android:top="@dimen/iorg_button_padding_top_small" android:right="@dimen/iorg_button_padding_right_small" android:bottom="@dimen/iorg_button_padding_bottom_small"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/iorg_btn_light_primary_bg_default"/>
            <stroke android:width="1.0dp" android:color="@color/iorg_main"/>
            <corners android:radius="2.0dp"/>
            <padding android:left="@dimen/iorg_button_padding_left_small" android:top="@dimen/iorg_button_padding_top_small" android:right="@dimen/iorg_button_padding_right_small" android:bottom="@dimen/iorg_button_padding_bottom_small"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/iorg_btn_light_primary_bg_default"/>
            <stroke android:width="1.0dp" android:color="@color/iorg_main_50"/>
            <corners android:radius="2.0dp"/>
            <padding android:left="@dimen/iorg_button_padding_left_small" android:top="@dimen/iorg_button_padding_top_small" android:right="@dimen/iorg_button_padding_right_small" android:bottom="@dimen/iorg_button_padding_bottom_small"/>
        </shape>
    </item>
</selector>
